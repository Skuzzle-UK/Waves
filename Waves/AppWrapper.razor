@using RazorConsole.Components
@using Waves.Pages

<Panel Height="_panelHeight" Width="_panelWidth">
    @if (_currentPage == "menu")
    {
        <MainMenu OnNavigate="NavigateTo" OnStartWithSeed="SetSeedAndNavigate" />
    }
    else if (_currentPage == "game")
    {
        <GameView OnNavigate="NavigateTo" Seed="_gameSeed" />
    }
</Panel>
<Align Horizontal="@Spectre.Console.HorizontalAlignment.Right" Vertical="@Spectre.Console.VerticalAlignment.Bottom">
    <Rows>
        <Markup Content="Created by Nick & Billy - 2025" />
    </Rows>
</Align>
